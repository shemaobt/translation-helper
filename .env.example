# Translation Helper Environment Variables
# Copy this file to .env and fill in the values

# Database (required)
# PostgreSQL connection string for Neon serverless
DATABASE_URL=

# Google AI (required)
# Gemini API key for translation, transcription, and agent prompts
GOOGLE_API_KEY=

# Google Cloud (required for TTS)
# Path to Google Cloud credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=

# Session (required)
# Secret key for session encryption - use a strong random string
SESSION_SECRET=

# Environment (optional)
# Set to "production" for production deployments
NODE_ENV=development

# Server port (optional)
# Default: 5000
PORT=5000
